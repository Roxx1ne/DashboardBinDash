<script>
    document.addEventListener("DOMContentLoaded", function () {
        const sections = document.querySelectorAll('.aboutSection, .OverviewSection, .TimbulanSampahSection, .PengelolaanSampahSection, .InsightSection');

        function reveal() {
            for (const section of sections) {
                const windowHeight = window.innerHeight;
                const elementTop = section.getBoundingClientRect().top;
                const elementVisible = 150;

                if (elementTop < windowHeight - elementVisible) {
                    section.classList.add('visible');
                }
            }
        }

        window.addEventListener('scroll', reveal);
        reveal(); 
    });
</script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const fadeInElementsLeft = document.querySelectorAll('.fade-in-left');
        const fadeInElementsRight = document.querySelectorAll('.fade-in-right');

        function checkFadeIn() {
            fadeInElementsLeft.forEach(el => {
                const rect = el.getBoundingClientRect();
                if (rect.top <= window.innerHeight && rect.bottom >= 0) {
                    el.classList.add('fade-in-visible');
                }
            });

            fadeInElementsRight.forEach(el => {
                const rect = el.getBoundingClientRect();
                if (rect.top <= window.innerHeight && rect.bottom >= 0) {
                    el.classList.add('fade-in-visible');
                }
            });
        }

        window.addEventListener('scroll', checkFadeIn);
        checkFadeIn();  
    });
</script>