@model CRUD.Models.SaranModel

@{
    ViewData["Title"] = "Hapus Saran";
}

<h2>@ViewData["Title"]</h2>

<h3>Apakah Anda yakin ingin menghapus saran berikut?</h3>

<div>
    <h4>@Model.Nama</h4>
    <dl class="row">
        <dt class="col-sm-2">Alamat</dt>
        <dd class="col-sm-10">@Model.Alamat</dd>
        <dt class="col-sm-2">Pesan</dt>
        <dd class="col-sm-10">@Model.Pesan</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Hapus" class="btn btn-danger" />
        <a href="@Url.Action("Index", "Saran")" class="btn btn-secondary">Batal</a>
    </div>
</form>